{
  "name": "graphest",
  "version": "1.8.1",
  "description": "A faithful graphing calculator",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:app": "webpack && cp src/renderer/index.html dist/",
    "build:rust": "bash -c \"MSYS2_ENV_CONV_EXCL=ACLOCAL_PATH cargo build --release && mkdir -p dist && rm -f dist/{compose,concatenate,graph} && cp target/release/{compose,concatenate,graph} dist/\"",
    "check-format": "prettier --check .",
    "clean": "npm-run-all clean:*",
    "clean:app": "rm -rf dist release",
    "clean:rust": "rm -rf target",
    "format": "prettier --write .",
    "guide": "cd docs/guide && asciidoctor --trace -r ./config/remove_mathjax.rb index.adoc && open index.html",
    "lint": "eslint .",
    "release:mac": "yarn clean && NODE_ENV=production yarn build && electron-builder --config electron-builder.config.js --mac --publish always",
    "release:win": "yarn clean && cross-env NODE_ENV=production yarn build && electron-builder --config electron-builder.config.js --win --publish always",
    "start": "cross-env NODE_ENV=development yarn build && electron .",
    "test": "jest"
  },
  "author": "Masashi Mizuno",
  "license": "MIT",
  "repository": "github:unageek/graphest",
  "private": true,
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@types/color": "^4.2.0",
    "@types/css-font-loading-module": "^0.0.14",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/leaflet": "^1.9.21",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/resize-observer-browser": "^0.1.11",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-updater": "^6.6.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.72.9",
    "@fluentui/react-icons": "^2.0.316",
    "@fluentui/react-tabster": "^9.26.11",
    "@fontsource/noto-sans": "^5.2.10",
    "@hello-pangea/dnd": "^18.0.1",
    "@reduxjs/toolkit": "^2.11.2",
    "bignumber.js": "^9.3.1",
    "color": "^4.2.0",
    "leaflet": "^1.9.4",
    "leaflet-easybutton": "^2.4.0",
    "lodash": "^4.17.21",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-redux": "^9.2.0",
    "slate": "^0.120.0",
    "slate-dom": "^0.119.0",
    "slate-history": "^0.113.1",
    "slate-react": "^0.120.0",
    "zod": "^4.2.1"
  }
}
